<%- include('../partials/header') %>

<h2>Add Artists:</h2>
<input type="text" id="artist" name="artist" placeholder="Artist name">
<input id="search" type="submit" value="Search">

<div id="results"></div>

<hr>



<% for(let artist of artists) { %>
    <div id="<%= artist.id %>">
        <p style="display: inline"><%= artist.name %></p>
        <input type="number" value="<%= artist.seenCount %>" name="seen" id="seen">
        <button>Update</button>
        <form style="display: inline" action="/artists/delete/<%= artist.id %>" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" value="Remove">
        </form>
    </div>
<% } %>

<script src="/js/profile.js"></script>

<%- include('../partials/footer') %>